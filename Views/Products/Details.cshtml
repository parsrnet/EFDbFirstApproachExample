@model EFDbFirstApproachExample.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Product Details</h2>

<table class="table">
	<tr>
		<th>Product ID</th>
		<td>@Model.ProductID</td>
	</tr>
	<tr>
		<th>Product Name</th>
		<td>@Model.ProductName</td>
	</tr>
	<tr>
		<th>Price</th>
		<td>
			@if (Model.Price.HasValue)
		{
			<span>@Model.Price.Value.ToString("C")</span>
		}
		</td>
	</tr>
	<tr>
		<th>Date of Purchase</th>
		<td>
			@if (Model.DOP.HasValue)
		{
			<span>@Model.DOP.Value.ToString("d/M/yyyy")</span>
		}
		</td>
	</tr>
	<tr>
		<th>Availability Status</th>
		<td>@Model.AvailabilityStatus</td>
	</tr>
	<tr>
		<th>Brand</th>
		<td>
			@if (Model.BrandID.HasValue)
		{
			<span>@Model.Brand.BrandName</span>
		}
		</td>
	</tr>
	<tr>
		<th>Category</th>
		<td>
			@if (Model.BrandID.HasValue)
		{
			<span>@Model.Category.CategoryName</span>
		}
		</td>
	</tr>
	<tr>
		<th>Availability</th>
		<td>@Model.AvailabilityStatus</td>
	</tr>
</table>

<a href="/products/index">Back to Products</a>